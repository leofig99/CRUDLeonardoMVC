@model List<CRUDLeonardoMVC.Models.ViewModels.ListEmpleadoViewModel>
@{
    ViewBag.Title = "Listado de empleados";
}

<h2>Listado de Empleados</h2>

<div class="row" style="text-align:right">
    <a href="~/Empleado/Agregar" class="btn btn-primary">Agregar</a>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="container">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var empleado in Model)
                            {
                                <tr>
                                    <td>@empleado.id</td>
                                    <td>@empleado.nombre</td>
                                    <td>@empleado.correo</td>
                                    <td>
                                        <a href="~/Empleado/Editar/@empleado.id"><span class="glyphicon glyphicon-cog"></span></a>
                                    </td>
                                    <td>

                                        <a href="~/Empleado/Eliminar/@empleado.id"><span class="glyphicon glyphicon-trash"></span> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>